{{#partial "content"}}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3> SAFARICOM DIVISIONS </h3>
        </div>

        <div class="panel-body">

            <table id="indexDetails">
                <thead>
                <tr>
                    <th scope="col">DIVISION NAME</th>
                    <th scope="col">DETAILS</th>
                </tr>
                </thead>
                {{#if divisions}}
                    {{#each divisions }}
                        <tbody>
                        <tr>

                            <td>{{division_name}}</td>
                            <td><p><a href="/divisions/{{id}}"> View details</a></p></td>
                        </tr>
                        </tbody>

                    {{/each}}
                {{else}}
                    <p>No Divisions yet!</p>
                {{/if}}
            </table>
        </div>

        <div class="panel-footer">
            <h4>Add Division!<a href="/divisions/new">Here</a></h4>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}