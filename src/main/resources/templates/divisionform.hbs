{{#partial "content"}}

    {{#if editDivision}}
        <div class="formDetails">
            <h1>Edit these details!</h1>
            <form class="form" action="/divisions/{{Divisions.id}}" method="post">
                <div class="form-group">
                    <label for="division_name">Edit this Division's division_name</label>
                    <input id="division_name" name="division_name" type="text" value="{{Division.division_name}}">
                </div>

            </form>

    {{else}}
            <h1>Add a new Division!</h1>

        <form action="/divisions" method="post">

            <div class="form-group">
                <label for="division_name">Division's  Name</label>
                <input id="division_name" name="division_name" class="form-control" type="text">
            </div>

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
    </div>
{{/partial}}

{{> layout.hbs}}