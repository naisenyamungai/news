{{#partial "content"}}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3> DEPARTMENTS </h3>
        </div>

        <div class="panel-body">

            <table id="indexDetails">
                <thead>
                <tr>
                    <th scope="col">DEPARTMENT NAMES</th>
                    <th scope="col">DETAILS</th>
                </tr>
                </thead>
                {{#if departments}}
                    {{#each departments }}
                        <tbody>
                        <tr>

                            <td>{{department_name}}</td>
                            <td><p><a href="/departments/{{id}}"> View details</a></p></td>
                        </tr>
                        </tbody>

                    {{/each}}
                {{else}}
                    <p>No Departments yet!</p>
                {{/if}}
            </table>
        </div>

        <div class="panel-footer">
            <h4>Add Department!<a href="/departments/new">Here</a></h4>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}